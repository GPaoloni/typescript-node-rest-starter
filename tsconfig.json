{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2016", "dom"],
    "target": "es2016",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
